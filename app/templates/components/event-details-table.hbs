<table class="uk-table uk-table-striped details-table table-collapse">
  <tbody>
    {{#each fields as |field|}}
      {{#if (get event.displayData field.key)}}
        <tr>
          <td>{{field.name}}</td>
          <td>{{{get event.displayData field.key}}}</td>
        </tr>
      {{/if}}
    {{/each}}
    {{#if showEventText}}
      {{#each event.texts as |text|}}
        <tr>
          <td>{{text.label}}</td>
          <td>{{{text.memo}}}</td>
        </tr>
      {{/each}}
    {{/if}}
  </tbody>
</table>

{{#each model.displayData.lessons as |lesson|}}
  {{lesson.DateFrom}} - {{lesson.DateTo}}: {{lesson.Designation}}<br>
{{/each}}