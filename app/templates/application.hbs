<div class="uk-width-1-1">
  <ul uk-tab class="uk-width-1-1 uk-margin-top">
    {{#each-in model.eventsByArea as |area data|}}
      {{!-- https://stackoverflow.com/questions/16380523/create-a-li-class-active-around-an-active-linkto#answer-18630506 --}}
      {{#link-to  "list" area tagName='li' href=false activeClass="uk-active"}}
        {{#link-to "list" area}}{{data.name}}{{/link-to}}
      {{/link-to}}
    {{/each-in}}
  </ul>

  <div class="uk-grid uk-margin" uk-grid>
    <!-- LEFT -->
    {{!-- TODO: put this in list so the active event can be used --}}
    {{!-- TODO: consider renaming list to area --}}
    <div class="uk-visible@m uk-width-1-4@m">
      <div class="uk-card uk-card-default uk-card-small uk-card-body">
        <h2 class="uk-h3">{{model.activeArea.name}}</h2>
        <ul class="uk-list">
          <li>
            {{#link-to "list" model.activeArea.key class="uk-link-muted" activeClass="uk-text-bold"}}Kursübersicht{{/link-to}}
          </li>
          {{#each-in model.activeArea.categories as |category categoryData|}}
          <li>
            {{#link-to "list.category" model.activeArea.key category class="uk-link-muted" activeClass="uk-text-bold"}}{{categoryData.name}}{{/link-to}}
          </li>
          {{/each-in}}
        </ul>
      </div>
    </div>

    <!-- CENTER -->
    <div class="uk-width-3-4@m uk-width-1-2@l center-container uk-margin-bottom">
      {{outlet}}
    </div>

    <!-- RIGHT -->
    <div class="uk-width-1-4@l">

      <!-- LOGO -->
      <img class="uk-margin uk-preserve-width" src="{{rootURL}}assets/images/logo.jpg">

      <!-- LEGEND -->
      <div class="uk-margin uk-card uk-card-default uk-card-small uk-card-body">
        <h2 class="uk-h3 uk-card-title">Legende</h2>

        <ul class="uk-list uk-list-divider">
          <li>
            {{status-lamp status="green"}}Freie Plätze vorhanden</li>
          <li>
            {{status-lamp status="yellow"}}Anmeldefrist abgelaufen</li>
          <li>
            {{status-lamp status="red"}}Alle Plätze belegt</li>
          <li>
            {{status-lamp status="orange"}}Anmeldung im Internet nicht möglich</li>
        </ul>
      </div>

      <!-- CONTACT -->
      <div class="uk-margin uk-card uk-card-default uk-card-small uk-card-body">
        <h2 class="uk-h3 uk-card-title">Kontakt</h2>
        <p>Kasernenstrasse 27
          <br> Postfach
          <br> 3000 Bern 22
          <br> Telefon: 031 633 87 00
        </p>
      </div>

      <!-- TWEETS -->
      <div class="uk-margin uk-card uk-card-default uk-card-small uk-card-body uk-visible@l">
        {{twitter-feed username="erz_kantonbern"}}
      </div>
    </div>
  </div>
</div>